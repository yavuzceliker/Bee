
@{
    ViewBag.Title = "Muayene - Uygulama Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            <table id="datatable-responsive" class="table table-striped table-bordered dataTable no-footer" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Koloni ID</th>
                        <th>İşlem</th>
                        <th>Tarih</th>
                        <th>Saat</th>
                    </tr>
                </thead>

                <tbody>
                    @Html.Raw(TempData["Muayene"])
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    function ac(id) {
        document.getElementById("kovan").setAttribute("style", "display:block; margin-left:" + ((this.innerWidth <= 768 ? 50 : (this.innerWidth > 768 && this.innerWidth <= 1024 ? 200 : (this.innerWidth > 1024 ? 350 : "")))) + "px; width:" + ((this.innerWidth <= 768 ? this.innerWidth / 1.4 : (this.innerWidth > 768 && this.innerWidth <= 1024 ? this.innerWidth / 2 : (this.innerWidth > 1024 ? this.innerWidth / 5 : "")))) + "px;");
        var Veri={Value:id}
        $.ajax({
            url: '@Url.Action("MuayeneGoster", "MuayeneUygulama")',
            type: 'POST',
            dataType: 'json',
            data: Veri,
            success: function (data) {
                document.getElementById("kovanyazi").innerHTML   = data;
            }
        });
    }
</script>
